{
  "expo": {
    "name": "LinguApp",
    "slug": "linguapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "linguapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.rork.linguapp",
      "entitlements": {
        "com": {
          "apple": {
            "security": {
              "application-groups": [
                "group.com.myapp"
              ]
            }
          }
        }
      },
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to access your microphone"
      },
      "associatedDomains": [
        "applinks:linguapp.app"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "app.rork.linguapp",
      "permissions": [
        "android.permission.VIBRATE",
        "RECORD_AUDIO",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "android.permission.REQUEST_INSTALL_PACKAGES",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro",
      "output": "static",
      "name": "LinguApp",
      "shortName": "LinguApp",
      "lang": "en",
      "scope": "/",
      "themeColor": "#58CC02",
      "description": "Learn languages with interactive lessons and spaced repetition",
      "dir": "ltr",
      "display": "standalone",
      "orientation": "portrait-primary",
      "startUrl": "/",
      "backgroundColor": "#ffffff",
      "statusBarStyle": "default"
    },
    "plugins": [
      "expo-router",
      [
        "expo-sqlite",
        {
          "enableFTS": false,
          "useSQLCipher": false,
          "android": {
            "enableFTS": false,
            "useSQLCipher": false
          },
          "ios": {
            "enableFTS": false,
            "useSQLCipher": false
          },
          "web": {
            "enableFTS": false,
            "useSQLCipher": false
          }
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone"
        }
      ],
      [
        "expo-notifications",
        {
          "color": "#ffffff",
          "defaultChannel": "default",
          "enableBackgroundRemoteNotifications": false
        }
      ],
      "expo-font",
      [
        "expo-apple-authentication"
      ],
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "9046c2d8-a105-4c6f-8850-8f8efb6757fd"
      }
    }
  }
}

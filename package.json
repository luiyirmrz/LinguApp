{
  "name": "expo-app",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "bunx rork start -p 87juor6a61cmt59y3pxiy --tunnel",
    "start-web": "bunx rork start -p 87juor6a61cmt59y3pxiy --web --tunnel",
    "start-web-dev": "node scripts/start-dev.js",
    "start-web-dev-simple": "bunx rork start -p 87juor6a61cmt59y3pxiy --web --tunnel",
    "start-web-local": "bunx rork start -p 87juor6a61cmt59y3pxiy --web",
    "start-backend": "tsx backend/server.ts",
    "dev": "concurrently \"npm run start-backend\" \"npm run start-web-local\"",
    "build": "expo export --platform web",
    "build:analyze": "node scripts/analyze-bundle.js analyze",
    "build:report": "node scripts/analyze-bundle.js report",
    "optimize": "npm run build && npm run build:analyze",
    "clean": "rm -rf dist node_modules/.cache",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "detox test -c ios.sim.debug",
    "test:e2e:android": "detox test -c android.emu.debug",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e:setup": "detox build",
    "test:update": "jest --updateSnapshot",
    "test:firebase": "node scripts/test-firestore-connection.js",
    "enable:firestore": "node scripts/enable-firestore.js",
    "test:auth-security": "node scripts/test-auth-system.js",
    "test:email-validation": "node scripts/test-email-validation.js",
    "deploy:security-rules": "node scripts/deploy-security-rules.js",
    "monitor:start": "node scripts/start-monitoring.js",
    "monitor:dashboard": "node scripts/monitoring-dashboard.js",
    "analyze:bundle": "ANALYZE_BUNDLE=true npm run build",
    "analyze:performance": "node scripts/enhanced-performance-analyzer.js",
    "analyze:performance:old": "node scripts/performance-analyzer.js",
    "optimize:images": "node scripts/optimize-images.js",
    "optimize:bundle": "npm run build && npm run analyze:performance",
    "optimize:auto": "node scripts/auto-optimize.js",
    "optimize:all": "npm run optimize:auto && npm run optimize:bundle",
    "fix:components": "node scripts/fix-remaining-components.js",
    "optimize:complete": "npm run fix:components && npm run optimize:all",
    "optimize:final": "node scripts/complete-optimization.js",
    "fix:specific-components": "node scripts/fix-specific-components.js",
    "optimize:dependencies": "node scripts/implement-lazy-dependencies.js",
    "optimize:targeted": "npm run fix:specific-components && npm run optimize:dependencies",
    "optimize:all-components": "node scripts/optimize-all-remaining-components.js",
    "detect:unoptimized": "node scripts/detect-unoptimized-components.js",
    "optimize:unoptimized": "node scripts/optimize-specific-unoptimized.js",
    "fix:optimization-errors": "node scripts/fix-optimization-errors.js",
    "revert:problematic": "node scripts/revert-problematic-optimizations.js",
    "preload:components": "node scripts/preload-components.js",
    "verify:e2e-coverage": "node scripts/verify-e2e-coverage.js",
    "check:memory-leaks": "node scripts/check-memory-leaks.js",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "dependencies": {
    "@expo/cli": "^54.0.6",
    "@expo/metro-config": "^54.0.3",
    "@expo/metro-runtime": "~6.1.1",
    "@expo/vector-icons": "^15.0.2",
    "@hono/node-server": "^1.19.1",
    "@hono/trpc-server": "^0.4.0",
    "@lottiefiles/dotlottie-react": "^0.13.5",
    "@nkzw/create-context-hook": "^1.1.0",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-native-firebase/crashlytics": "^20.5.0",
    "@react-native/assets-registry": "^0.81.4",
    "@sentry/react-native": "~6.20.0",
    "@tanstack/react-query": "^5.85.5",
    "@trpc/client": "^11.5.0",
    "@trpc/react-query": "^11.5.0",
    "@trpc/server": "^11.5.0",
    "babel-plugin-transform-imports": "^2.0.0",
    "buffer": "^6.0.3",
    "expo": "^54.0.7",
    "expo-apple-authentication": "~8.0.7",
    "expo-audio": "~1.0.13",
    "expo-auth-session": "~7.0.8",
    "expo-av": "~16.0.7",
    "expo-blur": "~15.0.7",
    "expo-constants": "~18.0.8",
    "expo-crypto": "~15.0.7",
    "expo-device": "~8.0.8",
    "expo-file-system": "~19.0.12",
    "expo-font": "~14.0.8",
    "expo-haptics": "~15.0.7",
    "expo-image": "~3.0.8",
    "expo-image-picker": "~17.0.8",
    "expo-linear-gradient": "~15.0.7",
    "expo-linking": "~8.0.8",
    "expo-location": "~19.0.7",
    "expo-notifications": "~0.32.11",
    "expo-router": "~6.0.7",
    "expo-speech": "~14.0.7",
    "expo-splash-screen": "~31.0.10",
    "expo-sqlite": "~16.0.8",
    "expo-status-bar": "~3.0.8",
    "expo-symbols": "~1.0.7",
    "expo-system-ui": "~6.0.7",
    "expo-web-browser": "~15.0.7",
    "firebase": "^12.2.1",
    "hono": "^4.9.4",
    "immer": "^10.1.1",
    "lottie-react-native": "~7.3.1",
    "nativewind": "^4.1.23",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "^0.81.4",
    "react-native-chart-kit": "^6.12.0",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "^0.5.1",
    "superjson": "^2.2.2",
    "tailwindcss": "^3.4.17",
    "zod": "^4.1.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-modules-commonjs": "^7.24.0",
    "@babel/plugin-transform-runtime": "^7.24.0",
    "@expo/ngrok": "^4.1.0",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.4.3",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/react": "~19.1.10",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "detox": "^20.17.0",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-expo": "~54.0.12",
    "jest-extended": "^4.0.2",
    "jest-mock-extended": "^3.0.5",
    "jest-transform-stub": "^2.0.0",
    "msw": "^2.11.1",
    "react-test-renderer": "^19.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.20.5",
    "typescript": "~5.9.2"
  },
  "android": {
    "package": "app.rork.linguapp"
  },
  "private": true,
  "jest": {
    "preset": "jest-expo",
    "setupFilesAfterEnv": [
      "<rootDir>/__tests__/setup.ts"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/__tests__/**",
      "!**/coverage/**",
      "!**/scripts/**",
      "!**/docs/**",
      "!**/mocks/**",
      "!**/*.config.{js,ts}",
      "!**/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "**/__tests__/**/*.{ts,tsx}",
      "**/?(*.)+(spec|test).{ts,tsx}"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  }
}
